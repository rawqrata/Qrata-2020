<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/views/layouts">

	<excludes>
		<pattern>*.js</pattern>
	</excludes>

	<decorator name="login" page="loginLayout.jsp">
		<url-pattern>/*</url-pattern>
	</decorator>

	<decorator name="admin" page="adminLayout.jsp">
		<url-pattern>/admin/*</url-pattern>
	</decorator>
	
	<decorator name="welcome" page="welcomeLayout.jsp">
		<url-pattern>/welcome.htm</url-pattern>
	</decorator>
	
</decorators>