<?xml version="1.0" encoding="UTF-8"?>

<sitemesh>
    <property name="decorator-file" value="/WEB-INF/decorator.xml"/>
    <excludes file="${decorator-file}"/>
    <page-parsers>
        <parser default="true"
            class="com.opensymphony.module.sitemesh.parser.FastPageParser"/>
        <parser content-type="text/html"
            class="com.opensymphony.module.sitemesh.parser.FastPageParser"/>
    </page-parsers>
 
    <decorator-mappers>
        <mapper class="com.opensymphony.module.sitemesh.mapper.ConfigDecoratorMapper">
            <param name="config" value="${decorator-file}"/>
        </mapper>
    </decorator-mappers>
</sitemesh>